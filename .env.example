# =============================================================================
# VeriPura Core - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env with real API keys to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Firebase Configuration
# -----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# -----------------------------------------------------------------------------
# Primary LLM Provider (Gemini) - Required
# -----------------------------------------------------------------------------
VITE_GEMINI_API_KEY=your_gemini_api_key
API_KEY=your_gemini_api_key  # Legacy support

# -----------------------------------------------------------------------------
# OCR Provider Selection
# -----------------------------------------------------------------------------
# Options: Gemini, DeepSeek, Kimi, MiniMax, Llama
# Default: Gemini
VITE_OCR_PROVIDER=Gemini

# -----------------------------------------------------------------------------
# Alternative OCR Providers (Optional)
# -----------------------------------------------------------------------------

# DeepSeek - Excellent for Asian languages
# API: https://api.deepseek.com
VITE_DEEPSEEK_API_KEY=

# Kimi/Moonshot AI
# API: https://api.moonshot.ai
VITE_KIMI_API_KEY=

# MiniMax
# API: https://api.minimax.chat
VITE_MINIMAX_API_KEY=

# Llama 3.2 Vision (via Together.ai, Ollama, or local NIM)
VITE_LLAMA_API_KEY=
VITE_LLAMA_BASE_URL=https://api.together.ai/v1

# -----------------------------------------------------------------------------
# LlamaCloud / LlamaIndex (Document Processing)
# -----------------------------------------------------------------------------
VITE_LLAMA_CLOUD_API_KEY=your_llamacloud_api_key

# -----------------------------------------------------------------------------
# IOTA Identity & SDK (Optional)
# -----------------------------------------------------------------------------
# Only required if using IOTA blockchain features
# VITE_IOTA_API_KEY=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# VITE_ENABLE_TELEMETRY=true
# VITE_DEBUG_MODE=false
